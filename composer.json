{
  "name": "webdevstudios/wp-search-with-algolia",
  "description": "Integrate the powerful Algolia search service with WordPress.",
  "license": "GPL-3.0-or-later",
  "type": "wordpress-plugin",
  "authors": [
    {
      "name": "WebDevStudios",
      "email": "contact@webdevstudios.com"
    }
  ],
  "require": {
    "php": ">=7.2",
    "algolia/algoliasearch-client-php": "^2.5",
    "guzzlehttp/guzzle": "^6.5",
    "psr/http-message": "^1.0",
    "psr/log": "^1.0",
    "psr/simple-cache": "^1.0"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.3.0",
    "humbug/php-scoper": "^0.13.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "phpcompatibility/php-compatibility": "^9.2.0",
    "phpcompatibility/phpcompatibility-paragonie": "^1.0.0",
    "phpcompatibility/phpcompatibility-wp": "^2.0.0",
    "squizlabs/php_codesniffer": "^3.3.1",
    "webdevstudios/wds-coding-standards": "^2.0.1",
    "wp-coding-standards/wpcs": "^2.1.0",
    "phpunit/phpunit": "^7.5"
  },
  "autoload": {
    "classmap": [
      "src/",
      "vendor_prefixed/"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-name": "wp-search-with-algolia",
    "phpcodesniffer-search-depth": 5
  },
  "scripts": {
    "prefix-algolia": [
      "@php ./vendor/humbug/php-scoper/bin/php-scoper add-prefix --prefix=WDS_WPSWA_Vendor --output-dir=./vendor_prefixed/algoliasearch-client-php --config=config/php-scoper/algoliasearch-client-php.php --force --quiet"
    ],
    "prefix-guzzle": [
      "@php ./vendor/humbug/php-scoper/bin/php-scoper add-prefix --prefix=WDS_WPSWA_Vendor --output-dir=./vendor_prefixed/guzzlehttp --config=config/php-scoper/guzzlehttp.php --force --quiet"
    ],
    "prefix-psr-http-message": [
      "@php ./vendor/humbug/php-scoper/bin/php-scoper add-prefix --prefix=WDS_WPSWA_Vendor --output-dir=./vendor_prefixed/psr-http-message --config=config/php-scoper/psr-http-message.php --force --quiet"
    ],
    "prefix-psr-log": [
      "@php ./vendor/humbug/php-scoper/bin/php-scoper add-prefix --prefix=WDS_WPSWA_Vendor --output-dir=./vendor_prefixed/psr-log --config=config/php-scoper/psr-log.php --force --quiet"
    ],
    "prefix-psr-simple-cache": [
      "@php ./vendor/humbug/php-scoper/bin/php-scoper add-prefix --prefix=WDS_WPSWA_Vendor --output-dir=./vendor_prefixed/psr-simple-cache --config=config/php-scoper/psr-simple-cache.php --force --quiet"
    ],
    "prefix": [
      "composer prefix-algolia",
      "composer prefix-guzzle",
      "composer prefix-psr-http-message",
      "composer prefix-psr-log",
      "composer prefix-psr-simple-cache"
    ],
    "install-codestandards": "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run",
    "compat": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --standard=phpcompat.xml --report=summary,source",
    "lint": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --standard=phpcs.xml --report=summary,source",
    "lint:errors": "@lint -n",
    "unit-test": "@php ./vendor/bin/phpunit"
  }
}
